<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.thuyhien.simplelogin.ui.activity.AddProfileActivity"
    android:padding="@dimen/activity_padding">

    <ImageView
        style="@style/LogoImageTheme"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:id="@+id/image_logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <EditText
            android:id="@+id/edit_profile_name"
            style="@style/LogInEditTextTheme"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/white"
            android:hint="@string/hint_profile_name" />

        <Button
            android:id="@+id/button_add_profile"
            android:layout_gravity="center"
            style="@style/CommonButtonTheme"
            android:text="@string/action_create"
            android:layout_marginTop="20dp" />
    </LinearLayout>
</LinearLayout>
