<resources>

    <!-- BbindsApplicationtion theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryBlack</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/color_common_screen_bg</item>
    </style>

    <style name="DarkActionBarTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@color/color_common_screen_bg</item>
    </style>

    <style name="LogoImageTheme">
        <item name="android:contentDescription">@string/description_logo_image</item>
        <item name="android:src">@mipmap/ic_fox_plus_logo_v3</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CloseButtonTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:contentDescription">@string/description_logo_image</item>
        <item name="android:src">@mipmap/ic_close_button</item>
    </style>

    <style name="CommonButtonTheme">
        <item name="android:layout_width">@dimen/button_login_width</item>
        <item name="android:layout_height">@dimen/button_login_height</item>
        <item name="android:background">@drawable/btn_login_bg</item>
        <item name="android:textSize">@dimen/button_login_text_size</item>
    </style>

    <style name="FacebookButtonTheme" parent="CommonButtonTheme">
        <item name="android:background">@drawable/btn_login_facebook_bg</item>
        <item name="android:paddingLeft">@dimen/button_facebook_vertical_spacing</item>
        <item name="android:paddingRight">@dimen/button_facebook_vertical_spacing</item>
    </style>

    <style name="LogInTextViewTheme">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="WelcomeTextViewTheme" parent="LogInTextViewTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LogInEditTextTheme" parent="LogInTextViewTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:paddingTop">@dimen/login_edit_text_vertical_padding</item>
    </style>

    <style name="ItemPosterTextTheme" parent="LogInTextViewTheme">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/item_poster_title_text_size</item>
    </style>

    <style name="FormLogInTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/layout_login_bg</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/form_login_padding</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="PosterDesTheme">
        <item name="android:contentDescription">@string/description_poster_image</item>
    </style>

    <style name="PosterTheme" parent="PosterDesTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="FeedInfoTheme">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/info_feed_text_size</item>
    </style>

    <style name="FeedTitleTheme" parent="FeedInfoTheme">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginRight">@dimen/text_vertical_spacing</item>
    </style>

    <style name="FeedContentLayoutTheme">
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">@dimen/layout_info_horizontal_spacing</item>
        <item name="android:paddingRight">@dimen/layout_info_horizontal_spacing</item>
        <item name="android:paddingTop">@dimen/layout_info_vertical_spacing</item>
        <item name="android:paddingBottom">@dimen/layout_info_vertical_spacing</item>
    </style>

    <style name="SettingTextTheme">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/title_setting_text_size</item>
    </style>
</resources>
